#!/bin/bash

LOG_DIR="/var/log/webserver"
BACKUP_DIR="/mnt/backup/webserver"

# Rotate the logs
for log in $(ls "$LOG_DIR"); do
  # Move the log file to the backup directory
  mv "$LOG_DIR/${log}" "$BACKUP_DIR/${log}"

  # Create a new empty log file
  touch "$LOG_DIR/${log}"
done

# Success!
echo "Log rotation and backup is completed successfully."
